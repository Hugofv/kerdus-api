{
  "name": "node-api-template",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:debug": "nodemon --exec 'node --inspect -r ts-node/register -r tsconfig-paths/register ./src/index.ts'",
    "build": "tsc",
    "prisma": "prisma",
    "start": "node dist/index.js",
    "scheduler": "node dist/scheduler/index.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@supabase/supabase-js": "^2.49.8",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "axios": "^1.9.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "groq-sdk": "^0.22.0",
    "helmet": "^8.1.0",
    "jet-logger": "^2.0.1",
    "morgan": "^1.10.0",
    "node-cron": "^4.0.7",
    "nodemon": "^3.1.10",
    "openai": "^4.103.0",
    "prisma": "^5.0.0",
    "slugify": "^1.6.6",
    "ts-command-line-args": "^2.5.1",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.16.3",
    "@types/reflect-metadata": "^0.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
